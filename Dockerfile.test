ARG BASE_IMAGE=ubuntu:22.04
FROM ${BASE_IMAGE}

WORKDIR /app

# Base system dependencies and build tools
ARG CACHE_BUST_LAYER_1=1
RUN echo "Layer 1 cache bust: ${CACHE_BUST_LAYER_1}" && \
    apt-get update && apt-get install -y \
    build-essential \
    cmake \
    git \
    curl \
    wget \
    vim \
    software-properties-common \
    ca-certificates \
    gnupg \
    lsb-release \
    && rm -rf /var/lib/apt/lists/*

# Node.js 20 and popular npm packages
ARG CACHE_BUST_LAYER_2=1
RUN echo "Layer 2 cache bust: ${CACHE_BUST_LAYER_2}" && \
    curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/* \
    && npm install -g \
        typescript \
        webpack \
        webpack-cli \
        @angular/cli \
        @nestjs/cli \
        create-react-app \
        next \
        vue \
        prettier \
        eslint \
        jest \
        mocha \
        pm2

# Python and pip
ARG CACHE_BUST_LAYER_3=1
RUN echo "Layer 3 cache bust: ${CACHE_BUST_LAYER_3}" && \
    apt-get update && apt-get install -y \
        python3.11 \
        python3-pip \
        python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Common Python web and data libraries (no ML)
ARG CACHE_BUST_LAYER_4=1
RUN echo "Layer 4 cache bust: ${CACHE_BUST_LAYER_4}" && \
    pip3 install --no-cache-dir \
        django \
        flask \
        fastapi \
        uvicorn \
        requests \
        httpx \
        aiohttp \
        sqlalchemy \
        psycopg2-binary \
        pymongo \
        redis \
        celery

# Python data processing (not ML)
ARG CACHE_BUST_LAYER_5=1
RUN echo "Layer 5 cache bust: ${CACHE_BUST_LAYER_5}" && \
    pip3 install --no-cache-dir \
        numpy \
        pandas \
        scipy \
        matplotlib \
        seaborn \
        plotly \
        jupyter \
        jupyterlab

# Java JDK and build tools
ARG CACHE_BUST_LAYER_6=1
RUN echo "Layer 6 cache bust: ${CACHE_BUST_LAYER_6}" && \
    apt-get update && apt-get install -y \
        openjdk-17-jdk \
        maven \
        gradle \
    && rm -rf /var/lib/apt/lists/*

# Go runtime
ARG CACHE_BUST_LAYER_7=1
RUN echo "Layer 7 cache bust: ${CACHE_BUST_LAYER_7}" && \
    wget https://go.dev/dl/go1.22.0.linux-amd64.tar.gz \
    && tar -C /usr/local -xzf go1.22.0.linux-amd64.tar.gz \
    && rm go1.22.0.linux-amd64.tar.gz
ENV PATH="${PATH}:/usr/local/go/bin"

# Database clients and tools
ARG CACHE_BUST_LAYER_8=1
RUN echo "Layer 8 cache bust: ${CACHE_BUST_LAYER_8}" && \
    apt-get update && apt-get install -y \
        postgresql-client \
        mysql-client \
        redis-tools \
    && rm -rf /var/lib/apt/lists/*

# Docker CLI
ARG CACHE_BUST_LAYER_9=1
RUN echo "Layer 9 cache bust: ${CACHE_BUST_LAYER_9}" && \
    curl -fsSL https://download.docker.com/linux/ubuntu/gpg | gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg \
    && echo "deb [arch=$(dpkg --print-architecture) signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | tee /etc/apt/sources.list.d/docker.list > /dev/null \
    && apt-get update \
    && apt-get install -y docker-ce-cli \
    && rm -rf /var/lib/apt/lists/*

# Kubernetes tools
ARG CACHE_BUST_LAYER_10=1
RUN echo "Layer 10 cache bust: ${CACHE_BUST_LAYER_10}" && \
    curl -LO "https://dl.k8s.io/release/$(curl -L -s https://dl.k8s.io/release/stable.txt)/bin/linux/amd64/kubectl" \
    && install -o root -g root -m 0755 kubectl /usr/local/bin/kubectl \
    && rm kubectl

# Terraform and cloud tools
ARG CACHE_BUST_LAYER_11=1
RUN echo "Layer 11 cache bust: ${CACHE_BUST_LAYER_11}" && \
    wget -O- https://apt.releases.hashicorp.com/gpg | gpg --dearmor -o /usr/share/keyrings/hashicorp-archive-keyring.gpg \
    && echo "deb [signed-by=/usr/share/keyrings/hashicorp-archive-keyring.gpg] https://apt.releases.hashicorp.com $(lsb_release -cs) main" | tee /etc/apt/sources.list.d/hashicorp.list \
    && apt-get update && apt-get install -y terraform \
    && rm -rf /var/lib/apt/lists/*

# Web scraping tools (lighter than Playwright)
ARG CACHE_BUST_LAYER_12=1
RUN echo "Layer 12 cache bust: ${CACHE_BUST_LAYER_12}" && \
    pip3 install --no-cache-dir \
        beautifulsoup4 \
        scrapy \
        selenium \
        lxml

# Additional Python utilities
ARG CACHE_BUST_LAYER_13=1
RUN echo "Layer 13 cache bust: ${CACHE_BUST_LAYER_13}" && \
    pip3 install --no-cache-dir \
        pytest \
        pytest-cov \
        black \
        flake8 \
        mypy \
        pylint \
        pydantic \
        python-dotenv

# Nginx and common system utilities
ARG CACHE_BUST_LAYER_14=1
RUN echo "Layer 14 cache bust: ${CACHE_BUST_LAYER_14}" && \
    apt-get update && apt-get install -y \
        nginx \
        supervisor \
        cron \
        rsync \
        zip \
        unzip \
        jq \
        htop \
    && rm -rf /var/lib/apt/lists/*

# Node.js application dependencies (common packages)
ARG CACHE_BUST_LAYER_15=1
RUN echo "Layer 15 cache bust: ${CACHE_BUST_LAYER_15}" && \
    npm install -g \
        express \
        socket.io \
        lodash \
        axios \
        dotenv \
        nodemon \
        sequelize-cli \
        prisma

CMD ["python3", "--version"]